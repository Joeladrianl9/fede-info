# Alerts
import { AlertController } from 'ionic-angular';

export class MyPage {

  constructor(public alertCtrl: AlertController){ }

  showAlert() {
    const alert = this.alertCtrl.create({
      title: 'New Friend!',
      subTitle: 'Your friend, Obi wan Kenobi, 
just accepted your friend request!'
      buttons: ['OK']
    	});
    alert.present();
  }
}
